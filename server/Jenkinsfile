pipeline {
    agent any

    tools {
        maven 'maven-3.9.4'
    }

    stages {
        stage('Check tools information') {
            steps {
                echo 'Check tools information'
                sh 'mvn --version'
                sh 'java -version'
            }
        }

        stage('Testing') {
            steps {
                dir('/var/jenkins_home/workspace/topic-registration-dev/server') {
                    echo 'Running unit test'
                    sh 'mvn test'
                    echo 'Test cases passed'
                }
            }
        }

        stage('Build docker image') {
            steps {

                echo 'Building docker image'
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Deployment') {
            steps {
                echo 'Deployment'
            }
        }

    }
}